{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container">

  <div class="jumbotron">
    <h1 id="color-override">Eat-Da-Burger!</h1>

  </div><!-- /jumbotron -->

  <div class="row">
    <div class="col-md-12 text-center">
      <form class="create-form">
        <div class="form-group">
          <label for="newburger">Order New Burger:</label>
          <input type="text" id="newburger" name="burger">
          {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
          <button type="submit" class="btn btn-success" id="addburger"><i class="fa fa-plus-square"></i></button>
        </div>
      </form>
    </div>
    <!-- Undevoured Burgers -->
    <div class="col-sm-6">
      <div class="card">
        <div class="card-title btn bg-success"><span class="text-light"><strong>New Burgers</strong></span></div>
        <div class="card-body">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            <button type="button" class="eatburger btn-success" id="eatbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><i class="fa fa-cutlery"></i></button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <!-- Devoured Burgers -->
    <div class="col-sm-6">
      <div class="card">
        <div class="card-heading btn bg-danger"><span class="text-light"><strong>Devoured Burgers</strong></span></div>
        <div class="card-body">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><i class="fa fa-trash"></i></button>
            <hr>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div><!-- /row -->

</div><!-- /container -->